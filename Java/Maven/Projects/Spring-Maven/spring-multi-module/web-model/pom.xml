  <modelVersion>4.0.0</modelVersion>

  <artifactId>webmodel</artifactId>

  <packaging>jar</packaging>

  <properties>
    <!-- This will make Spring-Boot not repackage this module, if taken up by the -->
    <!-- spring-boot-maven-compiler-plugin. -->
    <!-- Happens, if you put the spring-boot-maven-compiler-plugin into the root-pom (build-section) -->
    <!-- >>Dont FatJar this module/project<< -->
    <spring-boot.repackage.skip>true</spring-boot.repackage.skip>
  </properties>

</project>